    input#company(type='String', name='company')
  div.form-group
    label.vehicleAttr(for='price') vehicle price
    input#price(type='number', name='price')
  div.form-group
    label.vehicleAttr(for='color') vehicle color
    input#color(type='String', name='color')
  input(type="submit")
